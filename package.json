{
  "name": "vellum",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "sass:build": "sass --no-source-map --load-path=node_modules src/assets/styles:src/css",
    "bookshop-sass:build": "bookshop-sass -b _component-library -o dist/css/bookshop.css",
    "build": "npm run sass:build && npm run bookshop-sass:build && npx eleventy && npx pagefind --site dist",
    "start": "concurrently --kill-others \"sass --no-source-map --load-path=node_modules --watch src/assets/styles:src/css\"  \"npx tailwindcss -i ./src/css/main.css -o ./dist/css/styles.css --watch\" \"bookshop-sass -b _component-library -o dist/css/bookshop.css -w\" \"npx eleventy --serve\"  "
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@bookshop/eleventy-bookshop": "3.16.3",
    "@kevingimbel/eleventy-plugin-mermaid": "^3.0.0",
    "eleventy-plugin-nesting-toc": "^1.3.0",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "markdown-it-anchor": "^9.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sass": "^1.90.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@bookshop/browser": "3.16.3",
    "@bookshop/eleventy-engine": "3.16.3",
    "@bookshop/generate": "3.16.3",
    "@bookshop/sass": "^3.16.3",
    "concurrently": "^9.2.0",
    "tailwindcss": "^3.4.10"
  }
}
